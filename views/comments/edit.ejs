<%- include("../partials/top") %>
<div style="width: 300px; margin: 0 auto;">
    <h1>Edit Comment</h1>
    <form action="/posts/<%= postId %>/comments/<%= comment._id %>?_method=PUT" method="post">
        <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>">
        <button class="btn btn-primary btn-block mt-3">Submit</button>
    </form>
    <form class="mt-2" action="/posts/<%= postId %>/comments/<%= comment._id %>?_method=DELETE" method="post">
        <button class="btn btn-danger btn-block">Delete comment</button>
    </form>
</div>

