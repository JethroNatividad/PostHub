<%- include("../partials/top") %> 

<h1>Update <%= post.title %></h1>
<form action="/posts/<%= post._id %>?_method=PUT" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="post[title]" value="<%= post.title %>">
    </div>
    <div class="form-group">
        <label for="imageUrl">Image Url</label>
        <input class="form-control" type="text" id="imageUrl" name="post[image]" value="<%= post.image %>">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" id="body" name="post[body]" rows="6"><%= post.body %></textarea>
    </div>
        <button class="btn btn-primary">Submit</button>
</form>

