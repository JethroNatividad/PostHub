<%- include("../partials/top") %> 
  <div class="row">
        <div class="col-md-9">
          <div class="card mb-3 mt-3">
                <img src="<%= post.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.body %></p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small>
                    <a href="/posts/<%= post._id %>/edit">
                      <i class="fas fa-cog"></i>
                    </a>
                    </p>
                  </div>
                </div>
                <div class="card mt-2">
                    <div class="card-header">
                      <form action="/posts/<%= post._id %>/comments" method="post">
                        <div class="row cont">
                          <div class="col-9 col-sm-10">
                            <input type="text" name="comment[text]" class="form-control">
                          </div>
                          <div class="col-3 col-sm-2">
                            <button class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                          </div>
                        </div>
                      </form>
                      </div>
                    <div class="card-body">
                      <% post.comments.forEach((comment)=>{ %>
                        <p><%= comment.author %> - <%= comment.text %> <a href="/posts/<%= post._id %>/comments/<%= comment._id %>/edit">Edit</a> </p>
                      <% }) %>
                    </div>
                  </div>
        <div class="col-md-3">
        </div>
  </div>
  
<%- include("../partials/bot") %> 