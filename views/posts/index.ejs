<%- include("../partials/top") %> 

<h1>Posts for you</h1>
    <div class="row">
        <div class="col-md-9">
            <% posts.forEach((post)=>{ %>
                <div class="posts">
                    <a href="/posts/<%= post._id %> ">
                    <h3><%= post.title %></h3>
                    <p> <%= post.body %> </p>
                    <% if(post.image && post.image.length > 0){ %>
                        <img class="img-fluid" src="<%= post.image %>" alt="">
                    <% } %> 
                    <a class="btn btn-success" href="/posts/<%= post._id %> "> comment</a>
                    </a>
                </div>
    <% }) %>
        </div>
        <div class="col-md-3">

        </div>
    </div>

